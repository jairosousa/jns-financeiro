entity Lancamento {
	data LocalDate required,
    nome String required minlength(3),
    descricao String,
    valor BigDecimal,
    tipo Tipo,
}

entity Fornecedor {
	nome String required minlength(3),
    razao_social String,
    telefone_fixo String,
    telefone_cel String,
    pessoa Pessoa,
    cnpj String,
    cpf String
}

entity Categoria {
	nome String required,
    descricao String
}

entity Endereco {
	cep String,
	logradouro String required,
	numero String,
    complemento String,
	bairro String,
	cidade String required,
    uf String
}

entity Pagamento {
	vencimento LocalDate required,
    diaPagamento LocalDate,
   	quantidadeParcelas Long required,
    status Status required,
    tipoPagamento TipoPagamento
}

entity Parcela {
	dataVencimento LocalDate,
    dataPagamento LocalDate,
    numero Long,
    valor BigDecimal,
    juros BigDecimal,
    total BigDecimal,
    forma FormaPagamento,
    status Status
}

entity Cartao {
	nome String,
	bandeira Bandeira,
    numero Long,
    logotipo ImageBlob
}

enum Bandeira {
	AMERICAN, CIELO, ELO, MASTERCARD, VISA, OUTROS
}

enum Tipo {
    DESPESA, RECEITA
}

enum Status {
    PAGO, PENDENTE
}

enum TipoPagamento {
    AVISTA, PARCELADO
}

enum FormaPagamento {
    DINHEIRO, CARTAO, DEBITO
}

enum Pessoa {
    FISICA, JURIDICA
}

relationship OneToOne {
	Lancamento{pagamento(tipoPagamento)} to Pagamento{lancamento},
    Fornecedor{endereco} to Endereco,
    Parcela{cartao(nome)} to Cartao
}

relationship ManyToOne {
	Lancamento{fornecedor(nome)} to Fornecedor,
    Lancamento{categoria(nome)} to Categoria,
}

// defining multiple OneToMany relationships with comments
relationship OneToMany {
	Pagamento{parcela} to Parcela{pagamento}
}

// Set pagination options
paginate Endereco  with infinite-scroll
paginate Lancamento, Fornecedor, Categoria, Parcela, Pagamento with pagination

// Use Data Transfert Objects (DTO)
dto * with mapstruct

// Set service options to all except few
service all with serviceImpl

